{
    "name": "@vortus-solutions/redis-service",
    "version": "1.0.0",
    "description": "A robust Redis service client for Node.js applications",
    "main": "lib/index.js",
    "files": [
        "lib/**/*"
    ],
    "scripts": {
        "test": "jest",
        "lint": "eslint .",
        "format": "prettier --write .",
        "build": "babel src -d lib",
        "prepare": "npm run build",
        "preversion": "npm run lint",
        "version": "npm run format && git add -A src",
        "postversion": "git push && git push --tags"
    },
    "keywords": [
        "redis",
        "pubsub",
        "memory-cache",
        "event-driven",
        "microservices"
    ],
    "author": "Danilo Recchia <danilo.recchia@vortus.solutions>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/vortus-solutions/redis-service.git"
    },
    "dependencies": {
        "ioredis": "^5.4.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.23.0",
        "@babel/core": "^7.23.0",
        "@babel/preset-env": "^7.23.0",
        "eslint": "^8.53.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-jest": "^27.6.0",
        "eslint-plugin-node": "^11.1.0",
        "jest": "^29.7.0",
        "prettier": "^3.1.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "engines": {
        "node": ">=14.0.0"
    }
}
